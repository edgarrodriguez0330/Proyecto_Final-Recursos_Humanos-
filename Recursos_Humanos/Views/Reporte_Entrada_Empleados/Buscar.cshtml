@model IEnumerable<Recursos_Humanos.Empleados>

@{
    ViewBag.Title = "Buscar";
}

    <section class="single-page-title">
        <div class="container text-center">
            <h2>Buscar</h2>
        </div>
    </section>



    <div class="container body-content" style="margin-top:100px">
        @using (Html.BeginForm("Buscar", "Reporte_Entrada_Empleados", FormMethod.Get))
        {
            <p>
                <input type="text" name="search" value="" placeholder="Buscar por fecha..." class="form-control" />
                <br />
                <input type="submit" value="Buscar" class="btn btn-success" />
                <a href="/Salida_Empleados/Index" class="btn btn-success">Ver Todas las Salidas&raquo;</a>
            </p>
        }
        <table class="table">
            <tr class="thEstilos">
                <th>
                    @Html.DisplayNameFor(model => model.Codigo_Empleado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha_Ingreso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cargos.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Departamentos.Nombre)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="thEstilos2">
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo_Empleado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cargos.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Departamentos.Nombre)
                    </td>

                </tr>
            }

        </table>




    </div>
