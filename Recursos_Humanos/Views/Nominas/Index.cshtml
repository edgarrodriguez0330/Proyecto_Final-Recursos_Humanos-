@model IEnumerable<Recursos_Humanos.Nominas>

@{
    ViewBag.Title = "Index";
}

    <section class="single-page-title">
        <div class="container text-center">
            <h2>Nominas</h2>
        </div>
    </section>

    <div class="container body-content topSub">
        <div class="btn btn-blanco">
            @Html.ActionLink("Crear Nuevo","Create")
        </div>

        <table class="table" style="margin-top:20px">
            <tr class="thEstilos">
                <th >
                    @Html.DisplayName("Año")
                </th>
                <th >
                    @Html.DisplayNameFor(model => model.Mes)
                </th>
                <th >
                    @Html.DisplayName("Monto Total")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="thEstilos2">
                    <td>
                        @Html.DisplayFor(modelItem => item.Ano)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Monto_Total)
                    </td>
                    <td>
                        <div class="btn btn-warning">
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id })
                        </div>
                        <div class="btn btn-success">
                            @Html.ActionLink("Detalles", "Details", new { id = item.Id }) 
                        </div>
                        <div class="btn btn-danger">
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                        </div>
                        
                </tr>
            }

        </table>
        
    </div>
