@model IEnumerable<Recursos_Humanos.Permisos>

@{
    ViewBag.Title = "Index";
}

    <section class="single-page-title">
        <div class="container text-center">
            <h2>Buscar</h2>
        </div>
    </section>

    <div class="container body-content" style="margin-top:100px">
        <table class="table">
            <tr class="thEstilos">
                <th>
                    @Html.DisplayNameFor(model => model.Desde)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hasta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comentarios)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Empleados.Nombre)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="thEstilos2">
                    <td>
                        @Html.DisplayFor(modelItem => item.Desde)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hasta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comentarios)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Empleados.Nombre)
                    </td>

                </tr>
            }

        </table>
    </div>