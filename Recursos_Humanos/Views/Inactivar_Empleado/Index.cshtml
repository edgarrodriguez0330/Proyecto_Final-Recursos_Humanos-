@model IEnumerable<Recursos_Humanos.Empleados>

@{
    ViewBag.Title = "Index";
}

<section class="single-page-title">
    <div class="container text-center">
        <h2>Empleados</h2>
    </div>
</section>
<div class="container body-content topSub">
    <div class="btn btn-blanco">
        @Html.ActionLink("Crear Nuevo", "Create")
    </div>
    <table class="table" style="margin-top:20px;">
        <tr class="thEstilos">
            <th>
                @Html.DisplayName("Codigo")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_Ingreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estatus)
            </th>
            <th>
                @Html.DisplayName("Cargo")
            </th>
            <th>
                @Html.DisplayName("Departamento")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="thEstilos2">
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo_Empleado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cargos.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departamentos.Nombre)
                </td>
             
                <td>
                    <div class="btn btn-warning">
                        @Html.ActionLink("Inactivar", "Edit", new { id = item.Id })
                    </div>
                    
                </td>
            </tr>
            }

        </table>
    </div>